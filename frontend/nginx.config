server {
    listen 80;
    server_name _;

    # ===== Static files (Vite build output) =====
    root /usr/share/nginx/html;
    index index.html;

    # SPA routing support (React / Vue / Vite)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # ===== API proxy =====
    # Frontend calls /api/* → nginx → api_server:8001
    location /api/ {
        proxy_pass http://api_server:8001/;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ===== WebSocket proxy =====
    # Browser calls ws://<host>/ws → nginx → engine:8080/ws
    location /ws {
        proxy_pass http://engine:8080/ws;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }

 

    # ===== Basic gzip (optional but nice) =====
    gzip on;
    gzip_types
        text/plain
        text/css
        application/json
        application/javascript
        application/xml
        image/svg+xml;
}
